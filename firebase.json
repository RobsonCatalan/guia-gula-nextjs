{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix functions run predeploy:clean",
      "npm --prefix functions run predeploy:copy"
    ]
  },
  "hosting": {
    "public": "public/",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "**", "function": "ssr" }
    ]
  }
}
