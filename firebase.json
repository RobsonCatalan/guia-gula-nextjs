{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm.cmd --prefix \"%RESOURCE_DIR%\\..\" run build",
      "node \"%RESOURCE_DIR%\\..\\copyNext.js\""
    ]
  },
  "hosting": {
    "public": "public/",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/_next/static/**",
        "run": {
          "serviceId": "ssr",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "run": {
          "serviceId": "ssr",
          "region": "us-central1"
        }
      }
    ]
  }
}
